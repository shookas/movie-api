{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "sourceMap": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "src/**/*.test.ts"]
}
